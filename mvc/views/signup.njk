{% include "layouts/main.html" %}

<div class="pusher">
    <div class="ui inverted vertical masthead center aligned segment">

        {%- include "partials/welcomemenu.html" %}

        <section class="ui left aligned doubling one column stackable grid container">
            <div class="column">
                <div class="ui attached message">
                    <p>Fill out the form below to sign-up for a new account</p>
                </div>

                <form class="ui form segment" action="/signup/submit" method="POST">
                    <h3 class="ui header">Register</h3>
                    <div class="two fields">
                        <div class="field">
                            <label>First Name</label>
                            <input placeholder="First Name" type="text" name="firstName">
                            <div class="ui pointing label">Enter your firstname</div>
                        </div>
                        <div class="field">
                            <label>Last Name</label>
                            <input placeholder="Last Name" type="text" name="lastName">
                            <div class="ui pointing label">Enter your lastname</div>
                        </div>
                    </div>
                    <div class="two fields">
                        <div class="field">
                            <label>Email</label>
                            <input placeholder="name@example.com" type="text" name="email">
                            <div class="ui pointing label">Enter your email</div>
                        </div>
                        <div class="field">
                            <label>Password</label>
                            <input placeholder="password" type="password" name="password">
                            <div class="ui pointing label">and password</div>
                        </div>
                    </div>
                    <br><br><br>
                    <div class="three fields">
                        <div class="ui large buttons">
                           <button class="ui blue submit button">Submit</button>
                        </div>
                        <div class="field">
                            <div class="ui checkbox">
                                <input type="checkbox" id="terms">
                                <label for="terms">I agree to the terms and conditions</label>
                            </div>
                        </div>
                        <div class="column">
                             {{ errors }}
                        </div>
                    </div>
                </form>

                <div class="ui bottom attached warning message">
                    <i class="icon help"></i>
                    Already signed up? <a href="/login">Login here</a> instead.
                </div>

            </div>
        </section>
    </div>
</div>
