   <section class="ui raised segment">
       <div class="ui grid ">
           <div class="ui form six wide column">
               <div class="ui stacked segment">
                   <h3> Select a Region </h3>
        
                    {% if regions %}
                    <table class="ui celled table">
                    <thead>
                        <tr>
                            <th> name </th>
                            <th> variable </th>
                            <th> identifier </th>
                            <th> latitude </th>
                            <th> longitude </th>
                            {% if deletable %}
                                <th> Action </th>
                            {% endif %}
                        </tr>
                    </thead>
                    <tbody>
                        <form class="ui form segment" action="/report" method="POST">
                        {% for region in regions %}
                          <tr>
                                <td>{{ region.title }}</td>
                                <td>{{ region.variable }}</td>
                                <td>{{ region.identifier }}</td>
                                <td>{{ region.latitude }}</td>
                                <td>{{ region.longitude }}</td>
                                <td><div class="ui radio checkbox">
                                       <input type="radio" name="region_id" value="{{ region._id }}">
                                       <div class="ui large buttons">
                                           <button class="ui blue submit button">Submit</button>
                                       </div>
                                    </div>
                                </td>
                                        {% if deletable %}
                                <td>
                                    <a href='/home/region/{{ region._id }}/delete' class="ui icon button">
                                    <i class='icon trash'></i></td>
                                </td>
                                        {% endif %}
                            </tr>
                        </form>
                        {% endfor %}
                    </tbody>
                </table>
                {% endif %}
       </div>
   </section>
